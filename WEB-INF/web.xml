    </servlet>
    <servlet>
        <servlet-name>eliminarNota</servlet-name>
        <servlet-class>moviles.servlets.eliminarNota</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>guardarTarea</servlet-name>
        <servlet-class>moviles.servlets.guardarTarea</servlet-class>
    </servlet>
