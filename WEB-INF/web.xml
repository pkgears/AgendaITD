    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>moviles.servlets.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registro</servlet-name>
        <servlet-class>moviles.servlets.registro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>nuevoContacto</servlet-name>
        <servlet-class>moviles.servlets.nuevoContacto</servlet-class>
