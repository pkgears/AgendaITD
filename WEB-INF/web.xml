    <servlet>
        <servlet-name>actualizarContacto</servlet-name>
        <servlet-class>moviles.servlets.actualizarContacto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eliminarContacto</servlet-name>
        <servlet-class>moviles.servlets.eliminarContacto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>nuevoEvento</servlet-name>
        <servlet-class>moviles.servlets.nuevoEvento</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>actualizarEvento</servlet-name>
        <servlet-class>moviles.servlets.actualizarEvento</servlet-class>
