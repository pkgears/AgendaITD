    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/cerrarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registro</servlet-name>
        <url-pattern>/registro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>nuevoContacto</servlet-name>
        <url-pattern>/nuevoContacto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>actualizarContacto</servlet-name>
        <url-pattern>/actualizarContacto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
